            <div class="comment_form_item">
				#if($reply_to_edit)
                <input type="submit" value="更新评论" class="button" name="eventSubmit_UpdateDiaryReply" />
                #else
                <input type="submit" value="添加评论" class="button" name="eventSubmit_AddDiaryReply" />
				#end
        	</div>
		</div>
        </form>
	</div>	
