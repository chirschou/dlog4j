                    #foreach($p in [1..$page_count])
                    <option value="$p"#if($p_page==$p) selected#end>$p</option>
                    #end
					</select> 页
				</form>
			#end
		</div>
		<div class="clear"></div>
	</div>
	<div class="spacer_1"></div>
	#set($reply_id = $dlog.param("reply_id",-1))
