#invoke("_sub/_global.vm")
#select_layout("p_main.vm")
#set($linkid=$dlog.param("linkid",-1))

<div id="rss_channel_items">
	#show_msg_box("正在通过RSS抓取网站摘要,请稍候...")
</div>

<script src="$dlog.root()/js/prototype.js" type="text/javascript"></script>
<script type="text/javascript">
	function fetch(lnkid){
		var random = Math.random()+'';
		var url = '$dlog.root()/html/_rssview.vm?sid=${g_site_id}&linkid='+lnkid+'&r='+random;
    	var myAjax = new Ajax.Request(url,
    	    {method: 'get', onComplete: ajax_response}
    	);
		return false;
	}
	function ajax_response(originalRequest) {
		var d = $('rss_channel_items');
		d.innerHTML = originalRequest.responseText;
    }
	fetch($linkid);
</script>